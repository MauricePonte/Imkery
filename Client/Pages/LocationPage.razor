@page "/location"
@using Imkery.Entities

<MudPaper>
    <ObjectForm TItem="Location" ItemId="@ItemId" ReturnUrl="@(item=> "")">
        <FormContent>
            <MudTextField Label="@Resources.LocationEntity_Name" @bind-Value="@context.Name" Required="true"/>
            <MudTextField Label="@Resources.LocationEntity_Street" @bind-Value="@context.Street" Required="true" />
            <MudTextField Label="@Resources.LocationEntity_City" @bind-Value="@context.City" Required="true"/>
        </FormContent>
    </ObjectForm>
</MudPaper>


@code
{
    [Parameter]
    public Guid ItemId { get; set; }
 } 